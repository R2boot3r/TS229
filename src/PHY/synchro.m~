function [seuil dt]=synchro(bits,pream,Fse)
    
    M=[];
    Coef=[];
    Pcorr=sum(pream.^2);
    for g=1:errmax % formule de la prediction sur des segments de 160 cases,taille de pream
        r = sum(bits(g:g+8*Fse).^2); % a remplacer par g
        M=[M ;sum(pream.*fliplr(bits(g:g+8*Fse-1)))./sqrt(Pcorr*r)];%Rcorr(g,1)
        Coef=[Coef;(M(g))];
    end


[seuil dt]=max(Coef);
end